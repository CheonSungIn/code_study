 <!-- 자바스크립트 시작하기 -->
    <script>
      //for문 
      let arr=[1,2,3,4,5,6,7];
      for(let i=0; i < arr.length ;i++)
      {
        //기본적인 문법 자체는 c++이나 c#이랑 비슷하다.
        //if문 if(조건)이 참이라면 {}안으로 들어가고 아니라면 밖으로 빠진다.
        if(arr[i] % 2 ==0)
        {
          console.log(`arr[${i}]=${arr[i]} % 2 는 0이다 `);
        }
        console.log(i + "번째");
        console.log("값은 : " + arr[i]);

        //&&연산자 둘 조건이 모두 참이라면 true
        //||연산자 둘 조건중 하나만 참이라면 true


      }

